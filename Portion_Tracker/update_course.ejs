<!-- include header -->
<%- include('_header'); -%>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->

 <form action="/update_course" method="POST" id="update_user" class="needs-validation" nonvalidate autocomplete="off">

<div class="new_user">
    <div class="form-group">
        <label for="name" class="text-light">Name</label>
        <input type="text" name="name" value="<%= name; %>" id="name" placeholder="Mark Stoenis">
    </div>
    <div class="form-group">
        <label for="fees" class="text-light">FEES</label>
        <input type="text" name="fees" value="<%= fees; %>" id="fees" placeholder="In Rupees">
    </div>
    <div class="form-group">
        <label for="chapter" class="text-light">Chapter numbers</label>
        <input type="text" name="chapter" value="<%= chapter; %>" id="chapter" placeholder="Nunber of Chapters in Module">
    </div>
   
    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>

</div>
</form>

</div>
</main>



