              <% course.forEach(function(item){ %>
                <tr>
                    <option value="<%= c; %>"><td><%=item.name %></td></option>
                </tr>
               </tbody>
         </table>
           <% }) %>
         </select>
         <br>
            <label for="course" class="text-dark">Selected Course is :</label> 
            <input type = "text" id = "c" class="form-control" value="<%= c; %>" size = "20" name="c">
        </div>
       
        <div class="inputBx">
            <label for="Email" class="text-light">Email:</label>
            <input type="text" name="email"  id="email" value="<%= email; %>" >
        </div>
        <div class="inputBx">
            <label for="Email" class="text-light">Phone Number:</label>
            <input type="text" name="phonenumber" id="phonenumber" value="<%= phonenumber; %>" >
        </div>
        <div class="inputBx">
            <label for="Email" class="text-light">Branch:</label>
            <input type="text" name="branch"  name="branch"  value="<%= branch; %>">
        </div>
        <div class="inputBx">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

</form>

                         
